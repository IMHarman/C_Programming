#include <stdio.h>
#include <stdlib.h>

int main()
{
    float i,j;
    char choice;
    printf("Enter 2 numbers: ");
    printf("\nNumber 1: ");
    scanf("%f",&i);
    printf("Number 2: ");
	scanf("%f",&j);
    printf(" 1.\t+\n 2.\t-\n 3.\t*\n 4.\t/\n");
    printf("Enter your choice: ");
	scanf("%s",&choice);
	switch(choice)
	{
        case '+': printf("SUM: %f", i+j); break;
        case '-': printf("DIFFERENCE: %f", i-j); break;
        case '*': printf("PRODUCT: %f", i*j); break;
        case '/': printf("DIVISION: %f", i/j); break;
        default: printf("Wrong Input.");
	}
	return 0;
}
